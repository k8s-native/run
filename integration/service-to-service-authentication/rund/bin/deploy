#!/bin/bash

PROJECT_ID=$(gcloud config get-value project)

gcloud beta run deploy rund \
  --allow-unauthenticated \
  --args="--runc-service-url,https://runc/" \
  --cpu 2 \
  --image gcr.io/hightowerlabs/rund:0.0.1 \
  --memory 2G \
  --platform managed \
  --region us-east1 \
  --service-account rund-identity@${PROJECT_ID}.iam.gserviceaccount.com
